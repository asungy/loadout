# Key aliases.
set $alt Mod1
set $win Mod4

# Terminal emulator.
set $term alacritty

# Start a terminal.
bindsym $win+t exec $term

# Open application launcher.
bindsym $win+w exec dmenu_run

# Reload i3 configuration.
bindsym $win+$alt+r reload

# Exit i3.
bindsym $win+$alt+q exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
